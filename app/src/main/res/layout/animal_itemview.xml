<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/itemview_layout_margin"
        app:cardBackgroundColor="@color/itemview_card_background_color"
        app:cardCornerRadius="@dimen/itemview_card_corner_radius"
        app:cardElevation="@dimen/itemview_card_elevation"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemview_linear_layout_height"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/animal_image_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@color/colorAccent" />

            <TextView
                android:id="@+id/animal_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/itemview_textview_hint"
                android:textSize="@dimen/itemview_textview_textsize" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>